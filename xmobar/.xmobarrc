Config { font = "xft:Open Source Sans:size 8:antialias=True"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Bottom
       , commands = [ Run Wireless "wlan0" [] 10
                    , Run BatteryP ["BAT1"]
                        [ "-t", "<acstatus>"
                        , "-L", "10"
                        , "-H", "80"
                        , "-l", "red"
                        , "-h", "green"
                        , "--"
                        , "-O", "Charging"
                        , "-o", "Battery: <left>%"
                        ] 600
                    , Run Date "%H:%M:%S" "time" 10
                    , Run StdinReader
                    ]
       , template = "%StdinReader% }{ %wlan0wi% | %time%"
       }
